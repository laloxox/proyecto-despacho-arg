
<button id="scroll-to-top" class="fixed bottom-24 right-9 min-[390px]:right-8 min-[560px]:right-9 p-1 bg-slate-400 text-black rounded-full shadow-lg transition-colors duration-300 z-10 flex justify-center items-center sm:h-[35px] sm:w-[35px] md:h-[35px] md:w-[35px] lg:h-[35px] lg:w-[35px] xl:h-[35px] xl:w-[35px] hover:bg-slate-300">
    <svg width="30px" height="30px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M18.6806 13.9783L15.4706 10.7683L13.5106 8.79828C12.6806 7.96828 11.3306 7.96828 10.5006 8.79828L5.32056 13.9783C4.64056 14.6583 5.13056 15.8183 6.08056 15.8183H11.6906H17.9206C18.8806 15.8183 19.3606 14.6583 18.6806 13.9783Z" fill="#292D32"/>
    </svg>
</button>


<script>
    const scrollToTopButton = document.getElementById('scroll-to-top');

    window.addEventListener('scroll', () => {
        if(window.scrollY > 4000) {
            scrollToTopButton?.classList.add('visible');
        } else {
            scrollToTopButton?.classList.remove('visible');
        }
    });

    scrollToTopButton?.addEventListener('click', () => {
        window.scrollTo({
            top: 0,
            behavior: 'smooth'
        });
    });
</script>

<style>
    #scroll-to-top {
        display: none;
        transition: opacity 0.3s ease-in-out;
    }

    #scroll-to-top.visible {
        display: block;
    }
</style>